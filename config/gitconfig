[user]
	email = thor@thorerik.com
	name = Thor Erik Lie
	signingkey = ~/.ssh/signingkey

[alias]
    lol = log --pretty=oneline --abbrev-commit --graph --decorate
    ad  = add -p
    cm  = commit -v
    st  = status --branch
[init]
	defaultBranch = main
[rebase]
	autostash = true
[push]
	default = simple
[pull]
	rebase = true
	autostash = true
[commit]
    gpgsign = true
[core]
	excludesfile = ~/.gitignore
	editor = nvim
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.allowed_signers
