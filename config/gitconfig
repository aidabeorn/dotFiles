[user]
	email = thor@thorerik.com
	name = Thor Erik Lie
	signingkey = ~/.ssh/signingkey
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore
	editor = nvim
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow
	frag = magenta bold
	old = red bold
	new = green

[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	lol = log --pretty=oneline --abbrev-commit --graph --decorate
[commit]
	gpgsign = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.allowed_signers
